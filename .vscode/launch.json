{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to ESP32 (OpenOCD JTAG)",
            "type": "gdbtarget",
            "request": "launch",
            "program": "${workspaceFolder}/examples/basic_menu/build/basic_menu.elf",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/examples/basic_menu",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "${idf.toolsPath}/tools/xtensa-esp-elf-gdb/esp-2023r2-12.2.0/xtensa-esp-elf/bin/xtensa-esp32s3-elf-gdb", // Adjust path for your ESP-IDF version and target
            "miDebuggerArgs": "",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Target remote OpenOCD",
                    "text": "-target-select remote localhost:3333",
                    "ignoreFailures": false
                },
                {
                    "description": "Load program",
                    "text": "-file-exec-and-symbols ${workspaceFolder}/examples/basic_menu/build/basic_menu.elf",
                    "ignoreFailures": false
                },
                {
                    "description": "Monitor reset halt",
                    "text": "-exec monitor reset halt",
                    "ignoreFailures": false
                },
                {
                    "description": "Break at app_main",
                    "text": "-break-insert -f main", // Or app_main if that's your entry point
                    "ignoreFailures": false
                }
            ],
        
}